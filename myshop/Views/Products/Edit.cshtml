@model myshop.Models.Product

@{
    ViewBag.Title = "修改";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body style="background-image:url('background.jpg')">
    <h2>變更商品內容</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="background-color:white">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.商品編號)

            <div class="form-group">
                @Html.LabelFor(model => model.商品名稱, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.商品名稱, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.商品名稱, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.商品圖, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.商品圖, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.商品圖, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.商品類別, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.商品類別, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.商品類別, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.類別編號, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.類別編號, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.類別編號, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.製造日期, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.製造日期, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.製造日期, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.商品描述, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.商品描述, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.商品描述, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.價格, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.價格, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.價格, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.是否庫存, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.是否庫存)
                        @Html.ValidationMessageFor(model => model.是否庫存, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("回到商品管理", "Index")
    </div>
</body>