@model IEnumerable<myshop.Models.MyorderDetail>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>@String.Format("訂單編號{0}商品內容",Model.First().MyorderId)</h2>

<table class="table">
    <tr>
        <th>商品名稱</th>
        <th>商品價格</th>
        <th>購買數量</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stuff)
            </td>
        </tr>
    }

</table>
<div>
    <input type="submit" value="回上頁" class="btn btn-default" onclick="history.back()" />@*onclick="history.back()為回前頁*@
</div>
