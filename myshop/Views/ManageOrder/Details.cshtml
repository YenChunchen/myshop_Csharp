@model IEnumerable<myshop.Models.MyorderDetail>
@{
    ViewBag.Title = "訂單明細";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>@String.Format("訂單編號[{0}]商品內容",Model.First().MyorderId)</h2>

<table class="table">
    <tr>
        <th>商品名稱</th>
        <th>商品價格</th>
        <th>購買數量</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stuff)
            </td>
        </tr>
    }

</table>
<p>@Html.ActionLink("回到訂單管理", "Index", new { })</p>

