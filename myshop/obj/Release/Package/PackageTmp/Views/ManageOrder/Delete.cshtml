@model myshop.Models.Myorder

@{
    ViewBag.Title = "刪除訂單";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>是否刪除訂單<span>[@Html.DisplayFor(model => model.Id)]</span></h2>

<h3 class="text-danger">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            會員名稱
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserId)
        </dd>

        <dt>
            收貨人姓名
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RecieverName)
        </dd>

        <dt>
            收貨人電話
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RecieverPhone)
        </dd>

        <dt>
            收貨人地址
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RecieverAddress)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="刪除訂單" class="btn btn-default" /> |
            @Html.ActionLink("回到訂單管理", "Index")
        </div>
    }
</div>
